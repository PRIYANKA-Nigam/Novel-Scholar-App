<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ddraw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/main_toolbar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:gravity="left"
            android:text="CHOOSE YOUR BEST NOVEL FROM THE MENU"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#A91000"
            android:textSize="50dp"
            android:textStyle="italic" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="146dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/attitude" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="174dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/call_of_wild" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/awaken_the_giant_within" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="136dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/gullivers_travel" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/beloved" />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="135dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/half_girl" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">
        <include layout="@layout/main_nav_drawer"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>