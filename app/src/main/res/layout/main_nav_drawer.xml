<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="#000"
        android:src="@drawable/books" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novel Scholar"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#A91000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000"
        android:layout_marginTop="6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center_vertical"
        android:onClick="ClickNovel"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Novel Collection"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/a" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="ClickSearch"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search Meaning"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/bb" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center_vertical"
        android:background="@color/blue"
        android:onClick="ClickPronounciation"
        android:orientation="horizontal">

        <TextView
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Check Pronounciation"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/c" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:onClick="ClickNote"
        android:background="@color/purple_200"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Note"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:src="@drawable/d" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="ClickAbout"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="About "
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/e" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="7dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="ClickRate"
        android:background="@android:color/holo_blue_bright"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Rate the App"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/f" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="7dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="ClickLogout"
        android:background="@color/purple_700"
        android:orientation="horizontal">

        <TextView
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/g" />
    </LinearLayout>
</LinearLayout>